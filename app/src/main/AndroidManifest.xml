<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.own.healcorona">


    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".HCApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.global.GlobalUpdateActivity"
            android:screenOrientation="unspecified"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ui.splash.SplashActivity"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.main.dashboardactivity.DashBoardActivity" />
        <activity android:name=".ui.precautions.PrecautionsActivity" />
        <activity android:name=".ui.symptoms.SymptomsActivity" />
        <activity
            android:name=".ui.india.IndiaUpdateActivity"
            android:screenOrientation="unspecified"
            android:windowSoftInputMode="stateHidden" />
    </application>

</manifest>